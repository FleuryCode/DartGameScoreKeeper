<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/button_301_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/rules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:id="@+id/FL_301_P1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_301_rules">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_P1_Name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player One"
                    android:textColorHint="@color/light_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey" />


                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/TV_301Score_P1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tv_301"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="52sp"
                    app:layout_constraintBottom_toTopOf="@id/button_submit_P1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TIL_P1_Name" />

                <Button
                    android:id="@+id/button_submit_P1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:text="Submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TV_301Score_P1" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_P1_Score"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Score Hit"
                    android:padding="18dp"
                    android:textColorHint="@color/light_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_submit_P1">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_input_score_P1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="16sp" />


                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/button_clear_P1"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Clear"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TIL_P1_Score" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#D83A3A3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_301_rules" />


        <FrameLayout
            android:id="@+id/FL_301_P2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_line"
            app:layout_constraintTop_toBottomOf="@id/button_301_rules">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_P2_Name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Player Two"
                    android:textColorHint="@color/light_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey" />


                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/TV_301Score_P2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tv_301"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="52sp"
                    app:layout_constraintBottom_toTopOf="@id/button_submit_P2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TIL_P2_Name" />


                <Button
                    android:id="@+id/button_submit_P2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:text="Submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TV_301Score_P2" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TIL_P2_Score"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Score Hit"
                    android:padding="18dp"
                    android:textColorHint="@color/light_grey"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/button_submit_P2">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/text_input_score_P2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="16sp" />


                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/button_clear_P2"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Clear"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TIL_P2_Score" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>